{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es6",
      "es2015.iterable",
      "scripthost"
    ],
    "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "kuraCloud",
    "target~~",
    "dist"
  ],
  "compileOnSave": false
}
